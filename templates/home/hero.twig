<section class="nc-section" aria-label="Hero principal" data-aos="fade-up" data-aos-delay="0">
  {% set hero = homeContent.sections.hero|default({}) %}
  {% set hero_actions = homeContent.heroActions|default([]) %}
  {% set hero_metrics = homeContent.heroMetrics|default([]) %}

  <div class="nc-hero-grid">
    <div data-aos="fade-up" data-aos-delay="80">
      <p class="nc-section-kicker">{{ hero.kicker|default('Inicio') }}</p>
      <span class="nc-badge">{{ hero.badge|default('Empresa local â€¢ Software e Sistemas') }}</span>
      <h1 class="nc-title">{{ hero.title|default('NatalCode: solucoes de TI para problemas reais de negocio') }}</h1>
      <p class="nc-lead">
        {{ hero.lead|default('Desenvolvemos sistemas sob medida para melhorar operacao, produtividade e resultado. Unimos tecnologia, usabilidade e estrategia para entregar valor de forma pratica e continua.') }}
      </p>
      <div class="nc-actions" data-aos="fade-up" data-aos-delay="{{ hero.actionsDelay|default(140) }}">
        {% for action in hero_actions %}
          <a
            class="{{ action.class }}"
            href="{{ action.href }}"
            {% if action.loadingOnClick|default(false) %}data-loading-on-click{% endif %}
            {% if action.ariaDisabled|default(false) %}aria-disabled="true" tabindex="-1"{% endif %}
          >{{ action.ariaDisabled|default(false) ? action.disabledLabel|default('Em breve') : action.label }}</a>
        {% endfor %}
      </div>
    </div>
    <aside class="nc-hero-panel" aria-label="Indicadores da plataforma" data-aos="fade-left" data-aos-delay="{{ hero.panelDelay|default(180) }}">
      <h2 class="nc-hero-panel-title">{{ hero.panelTitle|default('Indicadores da plataforma') }}</h2>
      <ul class="nc-metric-list">
        {% for metric in hero_metrics %}
          <li class="nc-metric-item" data-aos="fade-up" data-aos-delay="{{ metric.delay }}">
            <span class="nc-metric-value">{{ metric.value }}</span>
            <span class="nc-metric-label">{{ metric.label }}</span>
          </li>
        {% endfor %}
      </ul>
    </aside>
  </div>
</section>
