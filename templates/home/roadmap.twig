<section id="roadmap" class="nc-section" aria-label="Roadmap recomendado">
  {% set roadmap_section = homeContent.sections.roadmap|default({}) %}
  {% set roadmap_items = homeContent.roadmapItems|default([]) %}

  {% include 'components/section-header.twig' with {
    kicker: roadmap_section.kicker|default('Roadmap'),
    title: roadmap_section.title|default('Roadmap de evolucao com foco em resultado'),
    lead: roadmap_section.lead|default('Trabalhamos em etapas objetivas para transformar necessidades reais em software confiavel, escalavel e pronto para crescer com o seu negocio.')
  } %}
  <ul class="nc-checklist">
    {% for item in roadmap_items %}
      {% include 'components/check-item.twig' with {
        step: item.step,
        title: item.title,
        description: item.description,
        delay: item.delay
      } %}
    {% endfor %}
  </ul>
</section>
