<section id="faq" class="nc-section" aria-label="Perguntas frequentes">
  {% set faq_section = homeContent.sections.faq|default({}) %}
  {% set faq_items = homeContent.faqItems|default([]) %}

  {% include 'components/section-header.twig' with {
    kicker: faq_section.kicker|default('FAQ'),
    title: faq_section.title|default('Perguntas frequentes'),
    lead: faq_section.lead|default('Respostas diretas sobre como a NatalCode resolve desafios reais com tecnologia, metodo e personalizacao.')
  } %}

  <div class="nc-faq-list">
    {% for item in faq_items %}
      {% include 'components/faq-item.twig' with {
        question: item.question,
        answer: item.answer,
        delay: item.delay
      } %}
    {% endfor %}
  </div>
</section>
