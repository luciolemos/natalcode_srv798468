<section id="solucoes" class="nc-section" aria-label="Solucoes principais">
  {% set features_section = homeContent.sections.features|default({}) %}
  {% set features_items = homeContent.featuresItems|default([]) %}

  {% include 'components/section-header.twig' with {
    kicker: features_section.kicker|default('Solucoes'),
    title: features_section.title|default('Solucoes de TI conectadas ao seu negocio'),
    lead: features_section.lead|default('Criamos e evoluimos produtos digitais com foco em eficiencia operacional, experiencia do usuario e resultado mensuravel.')
  } %}
  <div class="nc-feature-grid">
    {% for item in features_items %}
      {% include 'components/feature-card.twig' with {
        title: item.title,
        description: item.description,
        delay: item.delay
      } %}
    {% endfor %}
  </div>
</section>
