{% extends 'layouts/base.twig' %}

{% block title %}Usuarios | NatalCode{% endblock %}

{% block content %}
  <main class="nc-main nc-container">
    <section class="nc-section" aria-label="Lista de usuarios" data-aos="fade-up" data-aos-delay="0">
      <p class="nc-section-kicker" data-aos="fade-up" data-aos-delay="20">Usuarios</p>
      <h1 class="nc-title" data-aos="fade-up" data-aos-delay="60">Lista de usuarios da base</h1>
      <p class="nc-lead" data-aos="fade-up" data-aos-delay="100">
        Esta pagina renderiza HTML com Twig. O endpoint JSON continua disponivel em <code>/api/users</code>.
      </p>
      <div class="nc-actions" data-aos="fade-up" data-aos-delay="140">
        <a class="nc-btn nc-btn-primary" href="/api/users" target="_blank" rel="noopener">Abrir /api/users</a>
        <a class="nc-btn nc-btn-secondary" href="/">Voltar para home</a>
      </div>
    </section>

    <section class="nc-section nc-section--surface" aria-label="Cards de usuarios" data-aos="fade-up" data-aos-delay="180">
      <div class="nc-feature-grid">
        {% for user in users %}
          <article class="nc-feature-card" data-aos="fade-up" data-aos-delay="{{ 220 + loop.index0 * 40 }}">
            <h3>{{ user.firstName }} {{ user.lastName }}</h3>
            <p><strong>ID:</strong> {{ user.id }}</p>
            <p><strong>Username:</strong> {{ user.username }}</p>
          </article>
        {% endfor %}
      </div>
    </section>
  </main>
{% endblock %}
