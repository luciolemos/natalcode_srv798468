<p class="nc-section-kicker" data-aos="fade-up" data-aos-delay="{{ kicker_delay|default(20) }}">{{ kicker }}</p>
<h2 class="nc-section-title" data-aos="fade-up" data-aos-delay="{{ title_delay|default(40) }}">{{ title }}</h2>
{% if lead is defined and lead %}
  <p class="nc-section-lead" data-aos="fade-up" data-aos-delay="{{ lead_delay|default(80) }}">
    {{ lead }}
  </p>
{% endif %}
